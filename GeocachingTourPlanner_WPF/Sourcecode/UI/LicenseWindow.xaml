<Window x:Class="GeocachingTourPlanner.UI.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeocachingTourPlanner"
        xmlns:p="clr-namespace:GeocachingTourPlanner.Properties"
        mc:Ignorable="d"
        Title="Please accept the license" Height="Auto" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0" MinHeight="300" VerticalAlignment="Stretch" Width="Auto">
            <TextBlock Name="LicenseTextBlock" Text="You should see a License here"/>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button MinWidth="80" Click="Decline">Decline</Button>
            <Button MinWidth="80" Click="Accept">Accept</Button>
        </StackPanel>
    </Grid>
</Window>
