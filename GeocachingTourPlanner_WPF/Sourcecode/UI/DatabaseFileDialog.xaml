<Window x:Class="GeocachingTourPlanner.UI.DatabaseFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeocachingTourPlanner"
        mc:Ignorable="d"
        Title="DatabaseFileDialog" Height="100" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Name="MessageText" HorizontalAlignment="Center" VerticalAlignment="Center">Sample Message</TextBlock>
        <DockPanel Grid.Row="1" LastChildFill="False">
            <Button Name="CancelButton" DockPanel.Dock="Right" VerticalAlignment="Bottom" Height="25" IsCancel="True" Click="CancelButton_Click">Cancel</Button>
            <Button Name="NewImportButton" DockPanel.Dock="Right" VerticalAlignment="Bottom" Height="25" Click="NewImport_Button_Click">
                <TextBlock Name="NewImportButtonText">New/Import</TextBlock>
            </Button>
            <Button Name="OpenButton" DockPanel.Dock="Right"  VerticalAlignment="Bottom" Height="25" Click="OpenButton_Click">Open</Button>
        </DockPanel>
    </Grid>
</Window>
